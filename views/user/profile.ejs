<%-include("../../views/partials/user/header") %>

<!-- BREADCRUMB -->
<div id="breadcrumb" class="section">
  <!-- container -->
  <div class="container">
    <!-- row -->
    <div class="row">
     
          <li>      <p><span><a href="/">Home/profile</a></p>
          </li>
          
        </ul>
      </div>
    </div>
    <!-- /row -->
  </div>
  <!-- /container -->
</div>
<!-- /BREADCRUMB -->

<!--Side bar seciton-->
<%- include("../../views/partials/user/profileSidebar.ejs") %>

      <!-- Main Content -->
      <div class="col-md-9">
        <div class="content">
          <div class="info-box">
            <form>
              <h2>Personal Information</h2>
              <div class="form-group">
                <div>
                  <p><strong>Referal Id:</strong> <%= user.referralId %></p>

                  <label for="name">Name</label>
                  <input id="name" readonly type="text" value="<%=user.name%>" class="form-control" />
                </div>
              </div>
              <div class="form-group">
                <div>
                  <label for="password">Password</label>
                  <input id="password" readonly type="password" value="****" class="form-control" />
                  <div class="password-info">
                    <a href="/change-password" class="text-danger">Change Password</a>
                  </div>
                </div>
              </div>
              <div class="form-group">
                <div>
                  <label for="mobile">Mobile Number</label>
                  <input id="mobile" readonly type="text" value="<%=user.phone%>" class="form-control" />
                </div>
              </div>
              <div class="form-group">
                <div>
                  <label for="email">E-mail</label>
                  <input id="email" readonly type="email" value="<%=user.email%>" class="form-control"  disabled/>
                  <div class="password-info">
                    <a href="/change-email" class="text-danger">Change Email</a>
                  </div>
                </div>
              </div>
              
            </form>
          </div>
        </div>
      </div>
      <!-- /Main Content -->
    </div>
    <!-- /row -->
  </div>
  <!-- /container -->
</div>
<!-- /SECTION -->

<!-- Footer -->
<%- include("../../views/partials/user/footer") %>

<style>
  .info-box {
    background-color: #fff;
    padding: 30px;
    border-radius: 10px;
    box-shadow: 0 0 20px rgba(0, 0, 0, 0.1);
    position: relative;
  }

  .form-group {
    margin-bottom: 25px;
  }

  .form-group label {
    font-weight: 600;
    color: #333;
    margin-bottom: 8px;
  }

  .form-group input {
    width: 100%;
    padding: 12px;
    border: 1px solid #ddd;
    border-radius: 5px;
    transition: border-color 0.3s;
  }

  .form-group input:focus {
    border-color: #3B1C32;
    outline: none;
  }

  .form-group input:read-only {
    background-color: #f8f9fa;
  }

  .password-info {
    margin-top: 5px;
  }

  .password-info a {
    color: #3B1C32;
    text-decoration: none;
    font-size: 14px;
  }

  .password-info a:hover {
    text-decoration: underline;
  }

  .submit-btn {
    background-color: #3B1C32;
    color: #fff;
    padding: 12px 30px;
    border: none;
    border-radius: 5px;
    cursor: pointer;
    font-weight: 600;
    transition: background-color 0.3s;
    margin-right: 10px;
  }

  .submit-btn:hover {
    background-color: #3B1C32;
  }

  

 
</style>

