  .main-image {
    width: 100%;
    overflow: hidden;
    border-radius: 15px;
    box-shadow: 0 4px 8px rgba(0, 0, 0, 0.1);
    transition: transform 0.3s ease;
  }

  .main-image img {
    width: 100%;
    transition: transform 0.2s ease;
    cursor: zoom-in;
  }

  /* Thumbnail Gallery */
  .thumbnail-gallery img {
    width: 80px;
    height: 80px;
    cursor: pointer;
    object-fit: cover;
    border: 2px solid transparent;
    border-radius: 10px;
    transition: border-color 0.3s, transform 0.3s;
  }

  .thumbnail-gallery img:hover {
    border-color: #ff5722;
    transform: scale(1.1);
  }

  /* Product Title and Price */
  .product-title {
    font-size: 2.5rem;
    font-weight: 700;
    color: #333;
  }

  .product-price .sale-price {
    font-size: 2rem;
    font-weight: bold;
    color: #e91e63;
  }

  .product-price .regular-price {
    font-size: 1.4rem;
    color: #999;
  }

  .product-description {
    line-height: 1.8;
    font-size: 1.2rem;
    color: #555;
  }

  /* Product Actions */
  .product-actions .quantity-selector {
    display: flex;
    align-items: center;
    gap: 20px;
  }

  .product-actions .qty-btn {
    background-color: #ff5722;
    color: #fff;
    border: none;
    padding: 8px 20px;
    font-size: 1.4rem;
    border-radius: 10px;
    cursor: pointer;
    transition: background 0.3s;
  }

  .product-actions .qty-btn:hover {
    background-color: #e64a19; /* Darker shade for hover effect */
  }

  .btn.btn-gradient {
    background: linear-gradient(to right, #ff5722, #e91e63);
    color: #fff;
    border: none;
    padding: 12px 30px;
    font-size: 1.4rem;
    border-radius: 10px;
    cursor: pointer;
    transition: background 0.3s ease, transform 0.2s ease;
  }

  .btn.btn-gradient:hover {
    background: linear-gradient(to right, #e91e63, #ff5722);
    transform: scale(1.05);
  }

  /* Offer Labels */
  .offer-label {
    font-size: 1.2rem;
    font-weight: 600;
  }

  .no-offer {
    font-size: 1.2rem;
    font-weight: 600;
    color: #f44336;
  }
  .category-offer-value {
  color: #28a745; /* Green color for category offer */
  font-weight: 600;
}
.out-of-stock-message {
  font-size: 1.4rem;
  font-weight: bold;
  color: #f44336; /* Red color for out of stock */
}
.rating-star {
  font-size: 2rem;
  color: #ccc;
  cursor: pointer;
  transition: color 0.3s ease;
}

.rating-star:hover,
.rating-star:hover ~ .rating-star {
  color: #ffdd57; /* Highlight on hover */
}

.rating-star[data-value="1"]:hover,
.rating-star[data-value="2"]:hover ~ .rating-star,
.rating-star[data-value="3"]:hover ~ .rating-star,
.rating-star[data-value="4"]:hover ~ .rating-star,
.rating-star[data-value="5"]:hover ~ .rating-star {
  color: #ffd700; /* Highlight all stars up to the hovered star */
}
.fi-rs-star-empty {
  font-size: 24px;
  color: #ff5722;
  cursor: pointer;
}

.rating-stars i {
  color: #ffdd57; /* Gold color for stars */
  font-size: 1.5rem;
  margin-right: 5px;
}

</style>
