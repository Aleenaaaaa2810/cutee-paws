<%- include("../../views/partials/user/header") %>
  <style>
    body {
      font-family: 'Arial', sans-serif;
      background-color: #f8f9fa;
    }

    .page-header {
      background: #f1f1f1;
      padding: 20px 0;
    }

    .breadcrumb a {
      color: #007bff;
      text-decoration: none;
    }

    .table {
      border-radius: 10px;
      overflow: hidden;
      background-color: white;
      box-shadow: 0 4px 6px rgba(0, 0, 0, 0.1);
    }

    .table th {
      background-color: #343a40;
      color: white;
      padding: 15px;
    }

    .table td {
      vertical-align: middle;
      padding: 15px;
    }

    .img-thumbnail {
      border-radius: 8px;
      max-height: 80px;
      object-fit: cover;
    }

    .btn-sm {
      padding: 5px 10px;
      font-size: 14px;
    }

    .btn-success {
      background-color: #28a745;
      border: none;
    }

    .btn-danger {
      background-color: #dc3545;
      border: none;
    }

    .lead {
      font-size: 1.2rem;
      color: #6c757d;
    }
  </style>
</head>
<body>
  <header>
    <!-- Include your header partial here -->
  </header>

  <main class="main">
    <div class="page-header breadcrumb-wrap">
      <div class="container">
        <div class="breadcrumb">
          <a href="/" rel="nofollow">Home</a>
          <span></span> Shop
          <span></span> My Wishlist
        </div>
      </div>
    </div>

    <section class="mt-50 mb-50">
      <div class="container">
        <div class="row">
          <div class="col-12">
            <div class="table-responsive">
              <table class="table shopping-summery text-center clean table-bordered">
                <thead class="table-dark">
                  <tr class="main-heading">
                    <th scope="col">Image</th>
                    <th scope="col">Name</th>
                    <th scope="col">Price</th>
                    
                    <th scope="col">Remove</th>
                  </tr>
                </thead>
                <tbody>
                  <% if (Wishlist.length > 0) { %>
                    <% Wishlist.forEach(product => { %>
                      <tr>
                        <td class="image product-thumbnail">
                          <img src="/uploads/<%= product.productImage[0] %>" class="img-thumbnail" alt="<%= product.name %>" />
                        </td>
                        <td class="product-des product-name">
                          <h5>
                            <a href="#" class="text-primary"><%= product.name %></a>
                          </h5>
                          <p class="font-xs text-muted"><%= product.category.name %></p>
                        </td>
                        <td class="price">â‚¹<%= product.salePrice %></td>
                       
                        <td>
                          <a href="/removefromwishlist" onclick="removeFromWishlist('<%= product._id %>')" class="btn btn-danger btn-sm">Remove</a>
                        </td>
                      </tr>
                    <% }); %>
                  <% } else { %>
                    <tr>
                      <td colspan="5" class="text-center">
                        <p class="lead">No items found in Wishlist</p>
                      </td>
                    </tr>
                  <% } %>
                </tbody>
              </table>
            </div>
          </div>
        </div>
      </div>
    </section>
  </main>

  <footer>
    <!-- Include your footer partial here -->
  </footer>

  <script>
    
    function removeFromWishlist(productId) {
  Swal.fire({
    title: 'Are you sure?',
    text: 'This will remove the item from your wishlist.',
    icon: 'warning',
    showCancelButton: true,
    confirmButtonColor: '#d33',
    cancelButtonColor: '#3085d6',
    confirmButtonText: 'Yes, remove it!'
  }).then(result => {
    if (result.isConfirmed) {
      fetch('/removefromwishlist', {
        method: 'DELETE', // Use DELETE method for removal
        headers: {
          'Content-Type': 'application/json'
        },
        body: JSON.stringify({ productId }) // Send productId as JSON
      })
      .then(response => response.json())
      .then(data => {
        if (data.status) {
          Swal.fire('Removed!', 'Your item has been removed.', 'success');
          location.reload(); // Optionally reload the page to update the wishlist
        } else {
          Swal.fire('Error!', data.message, 'error');
        }
      })
      .catch(error => {
        console.error('Error:', error);
        Swal.fire('Error!', 'Something went wrong. Please try again later.', 'error');
      });
    }
  });
}

  </script>
<%- include("../../views/partials/user/footer") %>
